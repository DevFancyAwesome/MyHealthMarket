<section class="home-collections">
  <div class="wrapper">
    <div class="text">
      <h2>{{ section.settings.title | remove: '<p>' | remove: '</p>' }}</h2>
      {% if section.settings.button_url and section.settings.button_text %}
        <a href="{{ section.settings.button_url }}" class="btn btn-pink">{{ section.settings.button_text }}</a>
      {% endif %}
    </div>
  </div>
  {% if section.settings.bg_image %}
    <img src="{{ section.settings.bg_image | img_url: 'master' }}">
  {% endif %}
</section>

{% schema %}
{
  "name": "Home Collections",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    }
  ],
  "presets": [
    {
      "category": "Custom Content",
      "name": "Home Collections"
    }
  ]
}
{% endschema %}
