<section class="home-about">
  <div class="wrapper">
    <div class="cards">
      {% for card in section.blocks %}
        <div class="card">
          <div class="icon">
            {% if card.settings.icon %}
              <img src="{{ card.settings.icon | img_url: 'master' }}" alt="">
            {% endif %}
          </div>
          <div class="title">{{ card.settings.title }}</div>
          <div class="text">{{ card.settings.text | newline_to_br }}</div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.link_url and section.settings.link_text %}
      <a href="{{ section.settings.link_url }}" class="btn">{{ section.settings.link_text }}</a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Home About",
  "settings": [
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "settings": [
        {
          "id": "icon",
          "type": "image_picker",
          "label": "Icon"
        },
        {
          "id": "title",
          "type": "text",
          "label": "Title"
        },
        {
          "id": "text",
          "type": "textarea",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Custom Content",
      "name": "Home About"
    }
  ]
}
{% endschema %}
