<section class="hero hero-about">
  <div class="wrapper">
    <div class="text">
      <h1>{{ section.settings.title }}</h1>
      {{ section.settings.text }}
    </div>
  </div>
</section>

<section class="hero-mobile-text">
  <div class="wrapper">			
    {{ section.settings.text }}
  </div>
</section>

{% schema %}
{
  "name": "About Hero",
  "settings": [
    {
      "type": "html",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    }
  ]
}
{% endschema %}
