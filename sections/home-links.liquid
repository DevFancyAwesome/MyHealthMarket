<section class="home-links">
  <div class="wrapper">
    {% for block in section.blocks %}
      {% if block.settings.link_url %}
        <a href="{{ block.settings.link_url }}" class="link">
          <span class="title">{{ block.settings.link_text }}</span>
          {% if block.settings.image_desk and block.settings.image %}
            <picture>
			  <source srcset="{{ block.settings.image_desk | img_url: 'master' }}" media="(min-width: 1000px)" />
			  <img src="{{ block.settings.image | img_url: 'master' }}" />
			</picture>
          {% elsif block.settings.image %}
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="">
          {% endif %}          
        </a>
      {% else %}
        <div class="link">
          <span class="title">{{ block.settings.link_text }}</span>
          {% if block.settings.image_desk and block.settings.image %}
            <picture>
			  <source srcset="{{ block.settings.image_desk | img_url: 'master' }}" media="(min-width: 1000px)" />
			  <img src="{{ block.settings.image | img_url: 'master' }}" />
			</picture>
          {% elsif block.settings.image %}
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="">
          {% endif %}          
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Home Links",
  "blocks": [
    {
      "type": "links",
      "name": "Links",
      "settings": [
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        },
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "image_desk",
          "label": "Desktop Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Custom Content",
      "name": "Home Links"
    }
  ]
}
{% endschema %}
